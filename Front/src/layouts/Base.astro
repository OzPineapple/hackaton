---
export interface Props {
    titulo: string;
}
const { titulo } = Astro.props
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{titulo}</title>
 
</head>
<body>
    
    <slot></slot>
</body>
</html>

<style is:global>
    nav{
        background-color: #fff;
        width: 100%;
        height: 35px;
        margin: -10px;
        padding: 10px;
        color: #000;
    }

    nav ul li{
        background: transparent;
        position:relative;
        float:left;
         margin:0;
        padding:0;
    }
    nav ul li{
        display:block;
        color:#000;
        
        font-weight:400;
        font-size:15px;
        padding:10px;
        font-family:"HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif;
        text-transform:uppercase;
        letter-spacing:1px;
    }
    nav ul a{
        text-decoration:none;
        color:#000;
    }
    nav ul li:hover {
    background:rgba(218,7,42,100);
    }
    nav ul{
        list-style: none;
        margin: 0px;
        padding: 0 10px;
        float: right;
        margin-right: 50px;
    }
    nav ul ul {
        display:none;
        position:absolute;
        top:100%;
        left:0;
        background:#eee;
        padding:0;
    }
    nav ul ul li {
        float:none;
        width:150px
    }
    nav ul ul a {
        line-height:120%;
        padding:10px 15px;
    }

    nav ul li:hover > ul {
        display:block;
    }
    body{
        background: url(images/fondo.png);
        background: url(../images/fondo.png);
        background-size: cover;
        color: #fff;
    }
    
    h2{
        font-size: 2em;
    }
    h1{
        font-size: 3em;
    }
    label,input,button{
        font-size: 2em;
    }   
    button{
        padding: 10px;
        background-color: rgba(255,255,255,0.4);
    }
    button:hover, input:hover{
        background-color: rgba(240,28,5,0.3);
    }
    input{
        background-color: rgba(255, 255, 255, 0.4);
    }


</style>
